{
  "openapi": "3.0.1",
  "info": {
    "title": "KIPRIS Trademark Search",
    "version": "1.0.0"
  },
  "paths": {
    "/api/pending": {
      "get": {
        "summary": "대기 중인 검색 요청 목록 조회",
        "responses": {
          "200": {
            "description": "runStatus=Y인 searchId 및 searchQuery 배열",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "searchId": { "type": "string" },
                      "searchQuery": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/search": {
      "get": {
        "summary": "지정된 searchId로 상표 검색 실행",
        "parameters": [
          {
            "name": "searchId",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "input 시트의 searchId"
          }
        ],
        "responses": {
          "200": {
            "description": "검색 결과 및 처리 상태 반환",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "searchId": { "type": "string" },
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "trademarkName": { "type": "string" },
                          "applicationNumber": { "type": "string" },
                          "applicationDate": { "type": "string" },
                          "registrationStatus": { "type": "string" },
                          "applicant": { "type": "string" },
                          "designatedGoods": { "type": "string" },
                          "similarGroupCode": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
